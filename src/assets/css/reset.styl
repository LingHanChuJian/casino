@import url('https://fonts.font.im/css?family=Merriweather+Sans:400,400i,700,700i|Noto+Sans:400,400i,700,700i|PT+Sans:400,400i,700,700i|Source+Sans+Pro:400,400i,700,700i')
@import './default.styl'

::-webkit-scrollbar
    width 6px
    height 6px
    background-color $border-color
::-webkit-scrollbar-thumb
    background-color $font-color-hover
::-webkit-scrollbar-track
    background-color $border-color

.ivu-layout-sider
.ivu-layout-header
.ivu-layout-content
.ivu-layout-footer
    background-color #FFFFFF

.ivu-layout-sider
    border-right 1px solid $border-color

.ivu-layout-header
    border-bottom 1px solid $border-color

.ivu-menu-item
    font-size 16px
    color $font-color !important

.ivu-menu-item-active
    color $font-color-hover !important
